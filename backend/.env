# App settings
APP_NAME="RAG FAQ Chatbot"
DEBUG=true
PORT=8000
ENVIRONMENT="development"
HOST="localhost"

# Security
SECRET_KEY=""
JWT_SECRET_KEY=""

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ragdb"

# Configuration OpenRouter/DeepSeek (remplace Ollama)
OPENROUTER_API_KEY="sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxx"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
OPENROUTER_MODEL="deepseek/deepseek-chat"
OPENROUTER_MAX_TOKENS=4096
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_TOP_P=0.9
OPENROUTER_TIMEOUT=120
OPENROUTER_MAX_RETRIES=3
OPENROUTER_STREAM=true

# Configuration des embeddings
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DEVICE="cpu"

# Configuration RAG optimisée pour DeepSeek
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_DOCUMENTS=5
RAG_SIMILARITY_THRESHOLD=0.6
RAG_MAX_CONTEXT_LENGTH=8000
RAG_RERANK_DOCUMENTS=false
RAG_USE_METADATA_FILTERING=true

# CORS - Configuration corrigée
CORS_ORIGINS="[\"http://localhost:3000\",\"http://localhost:5173\",\"http://127.0.0.1:3000\",\"http://127.0.0.1:5173\"]"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Logging
LOG_LEVEL="INFO"

# Frontend
FRONTEND_URL="http://localhost:3000"

# Upload settings
UPLOAD_DIRECTORY="./uploads/data"
MAX_FILE_SIZE=10485760

# ChromaDB
CHROMADB_HOST="localhost"
CHROMADB_PORT=8001
CHROMADB_COLLECTION_NAME="faq_documents"
CHROMADB_PERSIST_DIRECTORY="./data/chromadb"

# Admin (optionnel)
ADMIN_EMAIL="exemple@gmail.com"
ADMIN_PASSWORD="password"